<Window x:Class="EPBClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Icon="Resources/Icon1.ico" Background="{DynamicResource NonConnectedBrush}">
    <Window.Resources>
        <SolidColorBrush x:Key="NonConnectedBrush" Color="#FFFF5D5D"/>
        <SolidColorBrush x:Key="ConnectedBrush" Color="White"/>
    </Window.Resources>
    <Grid  Name="mainGrid">
        <Menu HorizontalAlignment="Left" Height="19" VerticalAlignment="Top" Width="518">
            <MenuItem Header="Connection">
                <MenuItem Header="Open" Click="MenuItem_Click_1"/>
                <MenuItem Header="Close" Click="MenuItem_Click_2"/>
            </MenuItem>
        </Menu>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="31,51,0,0" TextWrapping="Wrap" Text="Some message" VerticalAlignment="Top" Width="120" Name="textMessage"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="185,55,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
    </Grid>
</Window>
