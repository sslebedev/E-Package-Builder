<Window x:Class="epb.OpenConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection" Height="155.955" Width="300" Visibility="Visible">
    <Grid Margin="0,0,-0.4,1.4">
        <GroupBox Header="Server IP" HorizontalAlignment="Left" Margin="14,10,0,0" VerticalAlignment="Top" Height="59" Width="132">
            <TextBox HorizontalAlignment="Left" Height="21" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="104" Margin="7,8,0,0" Name="textServerIP"/>
        </GroupBox>
        <Button Content="Open" HorizontalAlignment="Left" Margin="195,84,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.23,-2.318" Click="Button_Click_1"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="99,84,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        <GroupBox Header="Port" HorizontalAlignment="Left" Margin="159,10,0,0" VerticalAlignment="Top" Height="59" Width="111">
            <TextBox HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="11000" VerticalAlignment="Top" Width="81" Margin="9,8,0,0" Name="textPort"/>
        </GroupBox>

    </Grid>
</Window>